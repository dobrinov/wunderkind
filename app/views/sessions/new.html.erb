<div class="min-h-screen flex flex-col justify-center">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="text-center text-2xl/9 font-bold tracking-tight text-gray-900">Вход</h2>
  </div>

  <div class="mt-5 sm:mx-auto sm:w-full sm:max-w-[480px]">
    <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
      <%= form_with url: sign_in_path, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :email, "Имейл", class: "block text-sm/6 font-medium text-gray-900" %>
          <div class="mt-2">
            <%= f.email_field :email, required: true, autocomplete: "email", class: "block w-full rounded-md bg-white px-4 py-2.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-lg" %>
          </div>
        </div>

        <div>
          <%= f.label :password, "Парола", class: "block text-sm/6 font-medium text-gray-900" %>
          <div class="mt-2">
            <%= f.password_field :password, required: true, autocomplete: "current-password", class: "block w-full rounded-md bg-white px-4 py-2.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-lg" %>
          </div>
        </div>

        <div>
          <%= f.submit "Вход", class: "flex w-full cursor-pointer justify-center rounded-md bg-indigo-600 px-4 py-2.5 text-lg font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
        </div>
      <% end %>
    </div>

    <p class="mt-3 text-center text-sm/6 text-gray-500">
      Нямате акаунт?
      <%= link_to "Регистрирайте се", sign_up_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
