<div class="min-h-screen w-full flex items-center justify-center">
  <div class="max-w-md w-full mx-auto">
    <div>
      <h2 class="text-center text-3xl font-extrabold text-gray-900">
        Въпрос <%= @current_index %> от <%= @total_questions %>
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Текущ резултат: <%= @score %>
      </p>
    </div>

    <% if @feedback['correct'] %>
      <div class="mt-4 rounded-md bg-green-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-green-800">Правилно!</h3>
          </div>
        </div>
      </div>
    <% else %>
      <div class="mt-4 rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Грешно</h3>
          </div>
        </div>
      </div>
    <% end %>

    <div class="mt-8 bg-white sm:rounded-lg">
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-medium text-gray-900">Въпрос:</h3>
          <p class="mt-2 text-gray-700"><%= @current_question.text %></p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900">Вашият отговор:</h3>
          <p class="mt-2 text-gray-700"><%= @feedback['user_answer'] %></p>
        </div>

        <div>
          <h3 class="text-lg font-medium text-gray-900">Правилен отговор:</h3>
          <p class="mt-2 text-gray-700"><%= @feedback['correct_answer'] %></p>
        </div>

        <% if @current_question.explanation.present? %>
          <div>
            <h3 class="text-lg font-medium text-gray-900">Обяснение:</h3>
            <div class="mt-2 p-4 bg-gray-50 rounded-md">
              <p class="text-gray-700 whitespace-pre-line"><%= @current_question.explanation %></p>
            </div>
          </div>
        <% end %>

        <div class="mt-6">
          <%= link_to "Следващ въпрос", question_path, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    </div>
  </div>
</div>
