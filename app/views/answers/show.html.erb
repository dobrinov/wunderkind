<header class="relative py-0.5">
  <div class="overflow-hidden rounded-full bg-gray-200 max-w-lg mx-auto">
    <div class="h-2 rounded-full bg-indigo-600" style="width: <%= @assignment.answered_questions.count.to_f / @assignment.questions.count * 100 %>%"></div>
  </div>
</header>

<div class="w-lg mx-auto">
  <% if @is_correct %>
    <div class="rounded-md bg-green-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="flex-grow ml-3">
          <h3 class="text-sm font-medium text-green-800">Правилно!</h3>
        </div>
      </div>
    </div>
  <% else %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="flex-grow ml-3">
          <h3 class="text-sm font-medium text-red-800">Грешно</h3>
        </div>
      </div>
    </div>
  <% end %>
</div>

<section class="flex-grow flex w-lg overflow-y-auto gap-6 flex-col mx-auto">
  <div>
    <h3 class="text-lg font-medium text-gray-900">Въпрос:</h3>
    <p class="mt-2 text-gray-700"><%= @question.text %></p>
  </div>

  <div>
    <h3 class="text-lg font-medium text-gray-900">Вашият отговор:</h3>
    <p class="mt-2 text-gray-700"><%= @answer.value %></p>
  </div>

  <div>
    <h3 class="text-lg font-medium text-gray-900">Правилен отговор:</h3>
    <p class="mt-2 text-gray-700"><%= @question.answer %></p>
  </div>

  <% if @question.explanation.present? %>
    <div>
      <h3 class="text-lg font-medium text-gray-900">Обяснение:</h3>
      <div class="mt-2 p-4 bg-gray-50 rounded-md">
        <p class="text-gray-700 whitespace-pre-line"><%= @question.explanation %></p>
      </div>
    </div>
  <% end %>
</section>
<footer>
  <div class="max-w-lg mx-auto">
    <% if @next_question %>
      <%= link_to "Следващ въпрос", assignment_question_path(@assignment, @next_question), class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", autofocus: true %>
    <% else %>
      <%= link_to "Резултати", assignment_path(@assignment), class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500", autofocus: true %>
    <% end %>
  </div>
</footer>
